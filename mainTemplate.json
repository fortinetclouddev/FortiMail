{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "FortiMailVAName": {
            "type": "string"
        },
        "instanceType": {
            "type": "string",
            "defaultValue": "Standard_F2"
        },
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "FortiMailImageVersion": {
          "type": "string",
          "defaultValue": "latest",
          "metadata": {
            "description": "Select image version"
          }
        },
        "vnetNewOrExisting": {
          "type": "string",
          "defaultValue": "new",
          "allowedValues": [
            "new",
            "existing"
          ],
          "metadata": {
            "description": "Identify whether to use a new or existing vnet"
          }
        },
        "vnetName": {
            "type": "string"
        },
        "vnetResourceGroup": {
          "type": "string"
        },
        "vnetAddressPrefixes": {
            "type": "array"
        },
        "subnetName": {
            "type": "string"
        },
        "subnetPrefix": {
            "type": "string",
            "defaultValue": ""
        },
        "FortiMailPrivateIP": {
          "type": "string"
        },
        "publicIPNewOrExistingOrNone": {
          "type": "string",
          "defaultValue": "new",
          "allowedValues": [
            "new",
            "existing",
            "none"
          ],
          "metadata": {
            "description": "Identify if to use a public IP and if so whether it is new"
          }
        },
        "publicIpAddressName": {
            "type": "string",
            "defaultValue": "blank"
        },
        "publicIpAddressType": {
            "defaultValue": "Static",
            "allowedValues": [
              "Dynamic",
              "Static"
            ],
            "type": "string"
        },
        "publicIpResourceGroup": {
          "type": "string",
          "defaultValue": "blank",
          "metadata": {
            "description": "Resource group to which the Public IP belongs."
          }
        },
        "FortinetTags": {
        "type": "object",
        "defaultValue": {
          "provider": "6EB3B02F-50E5-4A3E-8CB8-2E129258317D"
          }
        }
    },
    "variables": {
      "vnetID": "[resourceId(parameters('vnetResourceGroup'),'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
      "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
      "networkInterfaceName": "[concat(parameters('FortiMailVAName'), '-NIC0')]",
      "NSGName": "[concat(parameters('FortiMailVAName'),'-NSG')]",
      "publicIPID": "[resourceId(parameters('publicIPResourceGroup'), 'Microsoft.Network/publicIPAddresses', parameters('publicIPAddressName'))]",
      "NICwPIP": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Static",
            "privateIPAddress": "[parameters('FortiMailPrivateIP')]",
            "subnet": {
              "id": "[variables('SubnetRef')]"
            },
            "publicIPAddress": {
              "id": "[variables('publicIPID')]"
            }
          }
        }
      ],
  
      "NICwoPIP": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Static",
            "privateIPAddress": "[parameters('FortiMailPrivateIP')]",
            "subnet": {
              "id": "[variables('SubnetRef')]"
            }
          }
        }
      ]
    },
    "resources": [
      {
        "condition": "[equals(parameters('vnetNewOrExisting'), 'new')]",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2017-09-01",
        "name": "[parameters('vnetName')]",
        "location": "[parameters('location')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": "[parameters('vnetAddressPrefixes')]"
          },
          "subnets": [
            {
              "name": "[parameters('subnetName')]",
              "properties": {
                "addressPrefix": "[parameters('subnetPrefix')]"
              }
            }
          ]
        }
      },
      {
        "condition": "[equals(parameters('publicIPNewOrExistingOrNone'), 'new')]",
        "type": "Microsoft.Network/publicIPAddresses",
        "apiVersion": "2017-09-01",
        "tags": {
          "provider": "[toUpper(parameters('FortinetTags').provider)]"
        },
        "name": "[parameters('publicIPAddressName')]",
        "location": "[parameters('location')]",
        "properties": {
          "publicIPAllocationMethod": "[parameters('publicIPAddressType')]"
        }
      },
      {
        "apiVersion": "2017-09-01",
        "tags": {
          "provider": "[toUpper(parameters('FortinetTags').provider)]"
        },
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('NSGName')]",
        "location": "[parameters('location')]",
        "properties": {
          "securityRules": [
            {
              "name": "AllowSSHInbound",
              "properties": {
                "description": "Allow SSH In",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "22",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 100,
                "direction": "Inbound"
              }
            },
            {
              "name": "AllowSMTPInbound",
              "properties": {
                "description": "Allow SMTP-25 In",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "25",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 110,
                "direction": "Inbound"
              }
            },
            {
              "name": "AllowHTTPSInbound",
              "properties": {
                "description": "Allow HTTPS-443 In",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "443",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 120,
                "direction": "Inbound"
              }
            },
            {
              "name": "AllowAllOutbound",
              "properties": {
                "description": "AllowOut",
                "protocol": "*",
                "sourcePortRange": "*",
                "destinationPortRange": "*",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 105,
                "direction": "Outbound"
              }
            }
          ]
        }
      },
      {
        "apiVersion": "2017-09-01",
        "dependsOn": [
          "[parameters('vnetName')]",
          "[parameters('publicIPAddressName')]",
          "[variables('NSGName')]"
        ],
        "tags": {
          "provider": "[toUpper(parameters('FortinetTags').provider)]"
        },
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('networkInterfaceName')]",
        "location": "[parameters('location')]",
        "properties": {
          "ipConfigurations": "[if(equals(parameters('publicIPNewOrExistingOrNone'), 'none'), variables('NICwoPIP'), variables('NICwPIP'))]",
          "enableIPForwarding": false
        }
      },
      {
            "name": "[parameters('FortiMailVAName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[parameters('location')]",
            "dependsOn": [
              "[variables('networkInterfaceName')]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('FortiMailVAName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('instanceType')]"
                },
                "storageProfile": {
                  "imageReference": {
                    "publisher": "fortinet",
                    "offer": "fortinet_fortimail",
                    "sku": "fortinet_fortimail",
                    "version": "[parameters('FortiMailImageVersion')]"
                  },

                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [
                      {
                        "createOption": "Empty",
                        "diskSizeGB": 1023,
                        "lun": 0
                      }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                }
            },
        "plan": {
          "name": "fortinet_fortimail",
          "publisher": "fortinet",
          "product": "fortinet_fortimail"
        }

        }
    ]
}

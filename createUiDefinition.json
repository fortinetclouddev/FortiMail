{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "VMName",
        "type": "Microsoft.Common.TextBox",
        "label": "FortiMail virtual appliance name",
        "toolTip": "This will be used to name the FortiMail virtual appliance.",
        "defaultValue": "FortiMail",
        "constraints": {
          "required": true,
          "regex": "^[A-Za-z0-9]{1,15}$",
          "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1 to 15 characters."
        }
      },
      {
        "name": "skuSelectorElement",
        "type": "Microsoft.Common.OptionsGroup",
        "label": "FortiMail Version",
        "toolTip": "Select Select which version of FortiMail you wish to deploy",
        "defaultValue": "FortiMail 5.3.9 (BYOL)",
        "constraints": {
          "allowedValues": [
            {
              "label": "FortiMail 5.3.3 (BYOL)",
              "value": {
                "SKU": "fortinet_fortimail",
                "Version": "5.3.3"
              }
            },
            {
              "label": "FortiMail 5.3.9 (BYOL)",
              "value": {
                "SKU": "fortinet_fortimail",
                "Version": "5.3.9"
              }
            }
          ]
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "FortiMail administrative username",
        "toolTip": "Username for the FortiMail virtual appliance. Must not be 'admin' nor 'root'.",
        "osPlatform": "Linux",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "passwordElement",
        "type": "Microsoft.Common.PasswordBox",
        "label": {
          "password": "FortiMail password",
          "confirmPassword": "Confirm password"
        },
        "toolTip": {
          "password": "Administrative account password for FortiMail"
        },
        "constraints": {
          "required": true,
          "regex": "^(?:(?=.*[a-z])(?:(?=.*[A-Z])(?=.*[\\d\\W])|(?=.*\\W)(?=.*\\d))|(?=.*\\W)(?=.*[A-Z])(?=.*\\d)).{12,72}$",
          "validationMessage": "The password must be between 12 and 72 characters long, and contain characters from at least 3 of the following groups: uppercase characters, lowercase characters, numbers, and special characters."
        },
        "options": {
          "hideConfirmation": false
        }
      }
    ],
    "steps": [
      {
        "name": "NetworkInstanceConfig",
        "label": "Network and Instance Settings",
        "subLabel": {
          "preValidation": "Configure the network and storage options",
          "postValidation": "Done"
        },
        "bladeTitle": "Network and Instance Settings",
        "elements": [
          {
            "name": "virtualNetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnet"
            },
            "toolTip": {
              "virtualNetwork": "Virtual network name",
              "subnets": "Subnet required for the FortiMail solution"
            },
            "defaultValue": {
              "name": "FortiMailVNet",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/28"
            },
            "subnets": {
              "subnet1": {
                "label": "Outside subnet",
                "defaultValue": {
                  "name": "Subnet1",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/29",
                  "minAddressCount": 1,
                  "requireContiguousAddresses": false
                }
              }
            }
          },
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual machine size",
            "toolTip": "The size of virtual machine to provision.",
            "recommendedSizes": [
              "Standard_F2s_v2",
              "Standard_F4s_v2"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A4",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D1_v2",
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_F1",
                "Standard_F2",
                "Standard_F4",
                "Standard_F8",
                "Standard_F1s",
                "Standard_F2s",
                "Standard_F4s",
                "Standard_F8s",
                "Standard_F16s",
                "Standard_F2s_v2",
                "Standard_F4s_v2",
                "Standard_F8s_v2",
                "Standard_F16s_v2"
              ],
              "required": true
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Fortinet",
              "offer": "fortinet_fortimail",
              "sku": "fortinet_fortimail"
            },
            "count": "1"
          }
        ]
      },
      {
        "name": "IPConfig",
        "label": "FortiMail IP address assignment",
        "subLabel": {
          "preValidation": "Configure Public IP Address",
          "postValidation": "Done"
        },
        "bladeTitle": "IP assignment",
        "elements": [
          {
            "name": "publicIpAddress",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "First public IP address resource name"
            },
            "toolTip": {
              "publicIpAddress": "Name of the public IP address object"
            },
            "defaultValue": {
              "publicIpAddressName": "FortiMail-PublicIP"
            },
            "constraints": {
              "required": {
                "domainNameLabel": false
              }
            },
            "options": {
              "hideNone": true,
              "hideDomainNameLabel": true
            }
          },
          {
            "name": "publicIPAddressTypeElement",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Public IP address type",
            "toolTip": "",
            "defaultValue": "Static",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Static",
                  "value": "Static"
                },
                {
                  "label": "Dynamic",
                  "value": "Dynamic"
                }
              ],
              "required": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "FortiMailVAName": "[basics('VMName')]",
      "adminUsername": "[basics('adminUsername')]",
      "adminPassword": "[basics('passwordElement')]",
      "FortiMailImageVersion": "[basics('skuSelectorElement').Version]",
      "instanceType": "[steps('NetworkInstanceConfig').vmSize]",
      "publicIpAddressName": "[steps('IPConfig').publicIpAddress.name]",
      "publicIPAddressType": "[steps('IPConfig').publicIPAddressTypeElement]",
      "publicIPNewOrExistingOrNone": "[steps('IPConfig').publicIpAddress.newOrExistingOrNone]",
      "publicIpResourceGroup": "[steps('IPConfig').publicIpAddress.resourceGroup]",
      "location": "[location()]",
      "vnetNewOrExisting": "[steps('NetworkInstanceConfig').virtualNetwork.newOrExisting]",
      "vnetName": "[steps('NetworkInstanceConfig').virtualNetwork.name]",
      "vnetResourceGroup": "[steps('NetworkInstanceConfig').virtualNetwork.resourceGroup]",
      "vnetAddressPrefix": "[steps('NetworkInstanceConfig').virtualNetwork.addressPrefixes]",
      "subnetName": "[steps('NetworkInstanceConfig').virtualNetwork.subnets.subnet1.name]",
      "subnetPrefix": "[steps('NetworkInstanceConfig').virtualNetwork.subnets.subnet1.addressPrefix]",
      "FortiMailPrivateIP": "[steps('NetworkInstanceConfig').virtualNetwork.subnets.subnet1.startAddress]"
    }
  }
  }
